server {
    listen 8080;

    root /usr/share/nginx/html/;

    index index.html;

    location / {
            try_files $uri /index.html;
    }

    location /api {
            proxy_pass ${NGINX_PROXY_IP};
            client_max_body_size 100m;
            add_header 'Access-Control-Allow-Origin' ${NGINX_ORIGINAL_IP};
            # add_header 'Access-Control-Allow-Credentials' 'true';
    }
}